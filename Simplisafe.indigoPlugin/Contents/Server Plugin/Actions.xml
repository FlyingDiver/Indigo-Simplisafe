<?xml version="1.0"?>
<Actions>
    <Action id="set_mode" deviceFilter="self.system">
        <Name>Set Mode</Name>
        <CallbackMethod>actionSetMode</CallbackMethod>
        <ConfigUI>
            <Field id="mode" type="menu" defaultValue="away">
                <Label>Mode:</Label>
                <List>
                    <Option value="off">Off</Option>
                    <Option value="home">Home</Option>
                    <Option value="away">Away</Option>
                </List>
            </Field>
        </ConfigUI>
    </Action>
    <Action id="set_pin" deviceFilter="self.system">
        <Name>Set PIN</Name>
        <CallbackMethod>actionSetPIN</CallbackMethod>
        <ConfigUI>
            <Field id="label" type="textfield" defaultValue="">
                <Label>Label:</Label>
            </Field>
            <Field id="pin" type="textfield" defaultValue="">
                <Label>PIN:</Label>
            </Field>
        </ConfigUI>
    </Action>
    <Action id="remove_pin" deviceFilter="self.system">
        <Name>Remove PIN</Name>
        <CallbackMethod>actionRemovePIN</CallbackMethod>
        <ConfigUI>
            <Field id="label" type="textfield" defaultValue="">
                <Label>Label:</Label>
            </Field>
        </ConfigUI>
    </Action>
</Actions>
